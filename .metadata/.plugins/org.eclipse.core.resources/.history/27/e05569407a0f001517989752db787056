	public String getRandomFirstName(){
		int randInt = 1 + rand.nextInt(firstNames.size());
		
		return firstNames.get(randInt);
	}
	
	public String getRandomLastName(){
		int randInt = 1 + rand.nextInt(lastNames.size());
		
		return lastNames.get(randInt);
	}
	
	public int getRandomAge(){
		int randAge = 22 + rand.nextInt(40);
		
		return randAge;
	}
	
}
